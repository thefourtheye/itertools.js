{
    "rules": {
        "no-console": 0,
        "indent": [ 2, 2 ],
        "quotes": [ 2, "single" ],
        "linebreak-style": [ 2, "unix" ],
        "no-unused-vars": [ 1 ],
        "semi": [ 2, "always" ],
        "max-len": [2, 120, 4]
    },
    "env": {
        "es6": true,
        "mocha": true,
        "node": true
    },
    "extends": "eslint:recommended"
}
